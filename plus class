public class post {Add commentMore actions
    public static void main(String[] args) {
        int a = 20;
        int b;

        b = a++;  
        System.out.println("Post-increment:");
        System.out.println("a = " + a);  
        System.out.println("b = " + b); 

        a = 20;
        b = a--;  
        System.out.println("Post-decrement:");
        System.out.println("a = " + a);  
        System.out.println("b = " + b);  
    }
}
